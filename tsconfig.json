{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceRoot": "src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "strict": true,
        "noUnusedParameters": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "filesGlob": [
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
