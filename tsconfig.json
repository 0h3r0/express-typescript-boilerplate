{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "typings_custom/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
